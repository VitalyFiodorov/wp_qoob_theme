<div class="subscribe-block">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
			<div class="subscribe-wrap-text">
				<div class="icon-red">{{left_tip}}</div>
				<div class="icon-blue">{{right_tip}}</div>
				</div>
				<div class="subscribe-wrap-image">
						
					<div class="subscribe-icon">
						<img alt="" src="{{subscribe_icon}}">
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<form action="https://app.getresponse.com/add_subscriber.html" accept-charset="utf-8" method="post">
					<!-- Email field (required) -->
					<input type="text" name="email" placeholder="{{email_pl}}"/>
					<!-- Campaign token -->
					<!-- Get the token at: https://app.getresponse.com/campaign_list.html -->
					<input type="hidden" name="campaign_token" value="{{campaign_token}}" />
					<!-- Thank you page (optional) -->
					<input type="hidden" name="thankyou_url" value="{{thankyou_url}}"/>
					<!-- Add subscriber to the follow-up sequence with a specified day (optional) -->
					<input type="hidden" name="start_day" value="{{start_day}}" />
					<!-- Forward form data to your page (optional) -->
					<input type="hidden" name="forward_data" value="{{forward_data}}" />
					<!-- Subscriber button -->
					<input type="submit" class="inverse" value="{{subscribe_btn}}"/>
				</form>
			</div>
		</div>
	</div>
</div>
