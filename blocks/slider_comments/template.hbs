<section class="slider-comments slider-comments-{{id}}">
    <div class="container container-no-padding">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h2 class="header-h2">{{{header}}}</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="owl-carousel owl-theme slider-carousel-{{id}}">
                    {{#if slider.length}}
                        {{#each_with_sort slider "order"}}
                            <div class="item-slider">
                                <h2 class="title_slider">{{{ title }}}</h2>
                                 <div class="text_slider">{{{ text }}}</div>
                            </div>
                        {{/each_with_sort}}
                    {{/if}}

                </div>                
            </div>
            <div class="col-lg-12">
            
            <a class="btn btn-action" {{#if btn_id }} id="{{btn_id}}" {{/if}} {{#if btn_target}}target="blank"{{/if}} {{#if btn_onclick }}  onclick="{{btn_onclick}}" {{/if}} href="{{action_url}}">{{action_text}}</a>
            </div>
        </div>
    </div>
</section>

<style>
  .slider-comments.slider-comments-{{id}} {
    background-image: url('{{desktop}}');
    background-image: -webkit-image-set(url('{{desktop}}') 1x, url('{{desktop_retina}}') 2x);
  }
}
</style>

<script type="text/javascript">
jQuery(document).ready(function() {
    jQuery('.slider-carousel-{{id}}').owlCarousel({
        margin: 50,
        lazyLoad: true,
        navText: [],
        nav: false,
        dots: true,
        autoHeight: true,
        responsive: {
            0: {
                items: 1,
                margin: 0,
                center: true
            },
            480: {
                items: 1,
                center: true,
                margin: 0
            },
            678: {
                items: 1,
                center: true
            },
            960: {
                items: 1,
                center: true
            },
            1200: {
                items: 1
            }
        }
    });
});
jQuery(window).scroll(function () {
                var scrolled = jQuery(document).scrollTop() - jQuery('.slider-comments-{{id}}').offset().top;
                jQuery('#background-block-{{id}}.parallax').css('top', scrolled + 'px');
            });
</script>