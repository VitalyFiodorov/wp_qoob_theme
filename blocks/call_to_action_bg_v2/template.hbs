<section class="call-to-action-bg ver-two call-to-action-bg-{{id}} action-overlay">
	<div id="background-block-{{id}}" class="background-block {{#ifCond parallax '==' '1'}}parallax{{/ifCond}}" {{#if image}} style="background-image : url({{image}});" {{/if}}></div>
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				{{#if header}}
				<h1 class="header-block">{{header}}</h1>
				{{/if}}
				{{#if description}}
					<p class="header-desc">{{description}}</p>
				{{/if}}
			</div>
			<div class="col-lg-12">
				<a href="{{action_url}}" class="btn btn-action br-white">{{action_text}}</a>
			</div>
		</div>
	</div>
</section>
<script>
	jQuery(document).ready(function() {
			jQuery(window).scroll(function () {
		        var scrolled = jQuery(document).scrollTop() - jQuery('.call-to-action-bg-{{id}}').offset().top;
		        jQuery('#background-block-{{id}}.parallax').css('top', scrolled + 'px');
		    });
	});
</script>