<section class="list_simple list_simple-{{id}}">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="header-block">{{header}}</h1>
            </div>
            <div class="col-lg-12">
                {{#if list.length}}
                    <ul id="accordion-{{id}}">
                    {{#each_with_sort list "order"}} 
                            <li id="li-simple-{{order}}">
                              <i class="fa fa-check" aria-hidden="true"></i>{{ title }}
                            </li>
                      {{/each_with_sort}}
                    </ul>
                {{/if}}
            </div>
        </div>
    </div>
</section>
