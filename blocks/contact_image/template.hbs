<section class="contact-image contact-image-{{id}}">
    <div id="background-block-{{id}}" class="background-block imagedesktop" {{#if image}} style="background-image : url({{image}});" {{/if}}></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                {{#if header}}
                <h2 class="h2-block">{{header}}</h2>
                {{/if}}
            </div>
            <div class="col-lg-12">
            <div class="contact-image-text">
                 {{{text}}}
            </div>
            </div>
            <div class="col-lg-12">
                <form accept-charset="utf-8" method="post">
                    <!-- Email field (required) -->
                    <input type="text" name="email" id="email_webark" placeholder="{{email_pl}}"/>
                    <!-- Subscriber button -->
                    <input type="submit" id="sendmail" class="inverse" value="{{contact_me}}"/>
                </form>
                <div id="sendmail-message"></div>
        </div>
        </div>
    </div>
    <img id="background-block-{{id}}" class="background-block imagetablet" src="{{imagetablet}}" />
</section>
<script>
jQuery(document).ready(function() {
    var request_sent = false;
jQuery("#sendmail").bind("click", sendmail);
    function sendmail(){
    if (request_sent) {
        jQuery("#sendmail-message").text("Your message is already sent");
        return false;
    }
    var form = jQuery(this).parents('form:first');
    var email_webark = form.find("#email_webark").val();
    if((email_webark === "")) { 
       jQuery(".main-popup_error").css("display", "block");     
    }
    else {
    jQuery.ajax({
      type: "POST",
      url: "/wp-admin/admin-ajax.php",
       type: "POST",
       dataType: 'json',
       data: ({
           action : 'qoob_sendmail',
           email_webark : email_webark
        }),
      cache: false,
      success: function(response){
        request_sent = response.data.response_status;
        jQuery("#sendmail-message").text(response.data.response_text);
      },
      error: function(response){
        request_sent = response.data.response_status;
        jQuery("#sendmail-message").text(response.data.response_text);
      }
    });
    }
    return false;

  }
  });
</script>