<section class="header-block-wrap header-new-bg-{{id}} header-new-bg" >
	<div class="container">
		<div class="row">
			<div class="col-lg-12 bg-image-logo">
				{{#if logo}} <img src="{{logo}}" alt="logo"/> {{/if}}
			</div>
			<div class="col-lg-12">
				<h1 class="header-block">{{{header}}}</h1>
			</div>
			<div class="col-lg-12">
				{{{text}}}
			</div>
			<div class="col-lg-12 text-center btn-header-wrap">
			{{#if accordion_buttons.length}}
					{{#each_with_sort accordion_buttons "order"}}
				<a href="{{btn_action_url}}" {{#if btn_id }} id="{{btn_id}}" {{/if}} {{#if btn_onclick }} onclick="{{btn_onclick}}" {{/if}} class="btn {{#ifCond btn_inverse '==' 'inversed'}}inverse{{/ifCond}} br-white {{#ifCond btn_hidebtn '==' '1'}}hidden-xs{{/ifCond}}" {{#if btn_target}}target="blank"{{/if}}>{{title}}</a>
  					{{/each_with_sort}}
            {{/if}}
			</div>
		</div>
	</div>
</section>
<style>
	.header-new-bg.header-new-bg-{{id}} {
		background: url('{{desktop}}');
		background: -webkit-image-set(url('{{desktop}}') 1x, url('{{desktop_retina}}') 2x);
	}
	@media (max-width: 991px) {
		.header-new-bg.header-new-bg-{{id}} {
			background-image: url('{{tablet}}');
			background-image: -webkit-image-set(url('{{tablet}}') 1x, url('{{tablet_retina}}') 2x);
		}
	}
	@media (max-width: 767px) {
		.header-new-bg.header-new-bg-{{id}} {
			background-image: url('{{mobile}}');
			background-image: -webkit-image-set(url('{{mobile}}') 1x, url('{{mobile_retina}}') 2x);
		}
	}
</style>
