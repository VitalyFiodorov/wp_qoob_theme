<section class="block-prices block-prices-bg-{{id}}">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{#if header}}
                <h2 class="header-h2">{{{header}}}</h2>
                {{/if}}
            </div>
            </div>
                        <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="description">{{description}}</div>
            </div>
        </div>
         <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <a class="btn btn-action br-white" {{#if btn_id }} id="{{btn_id}}" {{/if}} {{#if btn_target}}target="blank"{{/if}} {{#if btn_onclick }}  onclick="{{btn_onclick}}" {{/if}} href="{{button_url}}">{{button_text}}</a>
            </div>  
            </div>
            <div class="row">                     
                {{#if case.length}}
                    {{#each_with_sort case "order"}}
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 wrap-licence">
                        <div class="block_license {{#ifCond best_proposal '==' '1'}}best_proposal{{/ifCond}}">
                            <div class="top_license">
                                <div class="name_licence"> 
                                    {{title}}
                                </div>
                                <div class="cost_license">
                                    {{{price}}}
                                </div>
                            </div>

                            <ul class="content_license">
                                {{#if content_list.length}}
                                    {{#each_with_sort content_list "order"}}
                                        <li>{{title}}</li>
                                    {{/each_with_sort}}
                                {{/if}}
                            </ul>
                            <a class="link_license" {{#if btn_id }} id="{{btn_id}}" {{/if}} {{#if btn_target}}target="blank"{{/if}} {{#if btn_onclick }}  onclick="{{btn_onclick}}" {{/if}} href="{{action_url}}">{{action_text}}</a>
                        </div>
                    </div>
                    {{/each_with_sort}}
                {{/if}}
            </div>

    </div>
</section>
<style>
  .block-prices.block-prices-bg-{{id}} {
    background-image: url('{{desktop}}');
    background-image: -webkit-image-set(url('{{desktop}}') 1x, url('{{desktop_retina}}') 2x);
  }
  @media (max-width: 991px) {
     .block-prices.block-prices-bg-{{id}} {
      background-image: url('{{tablet}}');
      background-image: -webkit-image-set(url('{{tablet}}') 1x, url('{{tablet_retina}}') 2x);
    }
  }
  @media (max-width: 767px) {
    .block-prices.block-prices-bg-{{id}} {
      background-image: url('{{mobile}}');
      background-image: -webkit-image-set(url('{{mobile}}') 1x, url('{{mobile_retina}}') 2x);
    }
}
</style>
