<section class="slider-video" id="slider-video">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2 col-lg-12 col-lg-offset-0">
                <div class="owl-carousel owl-theme video-carousel-{{id}}">
                    {{#if video.length}}
                    {{#each_with_sort video "order"}}
                    <div class="item-video js-videoWrapper">
                        <h6>{{title}}</h6>
                        <iframe width="100%" id="ytplayer" height="100%" src="{{url}}" class="videoIframe js-videoIframe" src="" frameborder="0"></iframe>
                        <button class="videoPoster js-videoPoster" style=" background-image: url('{{image}}'); background-image: -webkit-image-set(url('{{image}}') 1x, url('{{image_retina}}') 2x);">
                            <svg height="100%" version="1.1" viewBox="0 0 68 48" width="100%"><path class="ytp-large-play-button-bg" d="m .66,37.62 c 0,0 .66,4.70 2.70,6.77 2.58,2.71 5.98,2.63 7.49,2.91 5.43,.52 23.10,.68 23.12,.68 .00,-1.3e-5 14.29,-0.02 23.81,-0.71 1.32,-0.15 4.22,-0.17 6.81,-2.89 2.03,-2.07 2.70,-6.77 2.70,-6.77 0,0 .67,-5.52 .67,-11.04 l 0,-5.17 c 0,-5.52 -0.67,-11.04 -0.67,-11.04 0,0 -0.66,-4.70 -2.70,-6.77 C 62.03,.86 59.13,.84 57.80,.69 48.28,0 34.00,0 34.00,0 33.97,0 19.69,0 10.18,.69 8.85,.84 5.95,.86 3.36,3.58 1.32,5.65 .66,10.35 .66,10.35 c 0,0 -0.55,4.50 -0.66,9.45 l 0,8.36 c .10,4.94 .66,9.45 .66,9.45 z" fill="#1f1f1e" fill-opacity="0.81"></path><path d="m 26.96,13.67 18.37,9.62 -18.37,9.55 -0.00,-19.17 z" fill="#fff"></path><path d="M 45.02,23.46 45.32,23.28 26.96,13.67 43.32,24.34 45.02,23.46 z" fill="#ccc"></path></svg>
                        </button>
                    </div>
                    {{/each_with_sort}}
                    {{/if}}


                </div>                
            </div>
        </div>
    </div>
</section>

<style>
    @media (max-width: 767px) {
        .slider-video .video-carousel-{{id}} .videoPoster {
            background: #000 !important;
        }
    }
</style>
<script type="text/javascript">

 jQuery(document).ready(function() {

    var $videoGlobal;
/* Stop current video  */
    function changeOwl() {
        $videoGlobal = "";
        jQuery(".owl-item").each(function() {
          if(jQuery(this).hasClass("active")) { 
            $videoGlobal = jQuery(this).find(".js-videoIframe");
            src = $videoGlobal.attr('src');
            $videoGlobal.attr('src', src.replace('?rel=0&showinfo=0&autoplay=1', ''));
            console.log(jQuery(this).find(".js-videoPoster").show());
            } 
        });
    }

/* Play current video  */
    function clickPoster(elem) {
     $videoGlobal = "";
     $videoGlobal = elem.parents('.js-videoWrapper').children(".js-videoIframe"),
     src = $videoGlobal.attr('src');
     $videoGlobal.attr('src', src + '?rel=0&showinfo=0&autoplay=1');
     elem.fadeOut();
 }

/* Initialization video carousel */
    jQuery('.video-carousel-{{id}}').owlCarousel({
        lazyLoad: true,
        navText: [],
        video: true,
        touchDrag: true,
        nav: false,
        dots: true,
        responsive: {
            0: {
                items: 1,
                margin: 0,
                center: true
            }
        }
    });
    
        jQuery('.video-carousel-{{id}}').on('change.owl.carousel', function(event){
            changeOwl();
    });

        jQuery('.js-videoPoster').on('click', function() {
            clickPoster(jQuery(this));
    });

});

</script>