<section class="call-to-action-bg-v3 call-to-action-bg-{{id}}">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				{{#if header}}
				<h2 class="h2-block">{{header}}</h2>
				{{/if}}
			</div>
			<div class="col-lg-12">
				<a href="{{action_url}}" {{#if btn_id }} id="{{btn_id}}" {{/if}} {{#if btn_onclick }} onclick="{{btn_onclick}}" {{/if}} class="btn btn-action {{#ifCond btn_hidebtn '==' '1'}} hidden-xs{{/ifCond}}" {{#if btn_target}}target="blank"{{/if}}>{{action_text}}</a>
			</div>
		</div>
	</div>
</section>
<style>
	.call-to-action-bg-v3.call-to-action-bg-{{id}} {
		background-image: url('{{image}}');
		background-image: -webkit-image-set(url('{{image}}') 1x, url('{{image_retina}}') 2x);
		background-position: center center;
		background-repeat:  no-repeat;
		background-size: cover;
	}
</style>
