<section class="block_html block_html-{{id}}">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="header-block">{{{header}}}</h1>
            </div>
            <div class="col-lg-12">
                {{#if html_list.length}}
                    <ul id="accordion-{{id}}">
                    {{#each_with_sort html_list "order"}}         
                        <li>
                             <a class="link_html" {{#if btn_id }} id="{{btn_id}}" {{/if}} {{#if btn_target}}target="blank"{{/if}}  {{#if btn_onclick }} onclick="{{btn_onclick}}" {{/if}} href="{{url}}"><i class="{{icon}}"></i> {{title}}</a>
                        </li>
                      {{/each_with_sort}}
                    </ul>
                {{/if}}
            </div>
            <div class="col-lg-12">
                <a href="{{action_url}}" class="btn btn-action">{{action_text}}</a>
            </div>
        </div>
    </div>
</section>
